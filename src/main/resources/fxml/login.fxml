<AnchorPane fx:id="mainpane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gui.LoginController">
   <children>
      <TextField fx:id="user" alignment="CENTER" layoutX="147.0" layoutY="122.0" prefHeight="25.0" prefWidth="304.0" text="Type your username here" />
